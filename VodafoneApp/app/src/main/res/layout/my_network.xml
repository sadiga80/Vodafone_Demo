<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg">

    <pl.pawelkleczkowski.customgauge.CustomGauge
        android:id="@+id/gauge1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        app:gaugePointStartColor="@color/md_red_500"
        app:gaugePointEndColor="@color/md_red_500"
        app:gaugePointSize="6"
        app:gaugeStartAngle="180"
        app:gaugeStrokeCap="ROUND"
        app:gaugeStrokeColor="@color/md_grey_400"
        app:gaugeStrokeWidth="10dp"
        app:gaugeStartValue="0"
        app:gaugeEndValue="120"
        app:gaugeSweepAngle="180"
        android:layout_above="@+id/textView10"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/netvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="63dp"
        android:text="256"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#eeeeee"
        android:layout_alignBottom="@+id/gauge1"
        android:layout_centerHorizontal="true"
        android:elevation="2dp"
        android:background="@drawable/myrect"/>

    <Button
        android:layout_width="449dp"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#d32f2f"
        android:textColor="#fafafa"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Signal strength is : Good"
        android:id="@+id/textView10"
        android:textColor="#f5f5f5"
        android:layout_marginBottom="202dp"
        android:layout_above="@+id/button3"
        android:layout_centerHorizontal="true"
        android:elevation="2dp"
        android:background="@drawable/myrect"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_alignTop="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:textColor="#f5f5f5"
        android:text="Network          3G"
        android:editable="false"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:textColor="#f5f5f5"
        android:text="Data Connection      Connected"
        android:editable="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_below="@+id/editText3"
        android:layout_centerHorizontal="true"
        android:textColor="#eeeeee"
        android:text="Service Status        Active"
        android:editable="false"/>

</RelativeLayout>