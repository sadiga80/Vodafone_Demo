<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:background="@mipmap/bg"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="90dp"
android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
    <Button

        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="My Cab         x"
        android:background="#42A5F5"
        android:layout_marginBottom="10dp"/>
    </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="140dp"

            >

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
android:background="#E3F2FD"
                android:layout_width="346dp"
                android:layout_height="200dp"
                card_view:cardCornerRadius="4dp"

android:layout_marginLeft="10dp"

                >

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"

                    xmlns:cardview="http://schemas.android.com/tools"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#fcfdfdfb"
                    android:orientation="vertical">

                    <!--<TextView-->
                    <!--android:id="@+id/name"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textSize="14sp"-->
                    <!--android:textStyle="bold" />-->



                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="201dp"
                        android:background="#E3F2FD"
                        >
                        <!--<EditText-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:id="@+id/stud_search"/>-->


                        <TextView
                            android:id="@+id/txt_cabtype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="50dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:text="My preferd cab  : Uber "/>
                        <ImageView
                            android:id="@+id/img_cab"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
android:paddingLeft="20dp"
                            android:background="@mipmap/cab"
                            android:layout_alignParentTop="true"
                            android:layout_alignLeft="@+id/button"
                            android:layout_alignStart="@+id/button" />
                        <!--<TextView android:id="@+id/lname"-->
                        <!--android:layout_width="wrap_content"-->

                        <!--android:layout_height="wrap_content"/>-->
                        <TextView
                            android:id="@+id/txt_pickup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_cab"
                            android:paddingLeft="50dp"
                            android:text="Pick-up place  :      Sector 22 groun Flool"/>


                        <TextView
                            android:id="@+id/txt_place"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_pickup"
                            android:paddingLeft="50dp"
                            android:textAlignment="center"
                            android:text="  Place London"/>
                        <TextView
                            android:id="@+id/txt_last_trip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_place"
                            android:paddingLeft="50dp"

                            android:text="Last Trip           :     21th July 2016"/>
                        <TextView
                            android:id="@+id/txt_last_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_last_trip"
                            android:paddingLeft="50dp"

                            android:text="Last Drop Point:    Crosswall Tower Hill"/>
                        <TextView
                            android:id="@+id/txt_place2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_last_date"
                            android:paddingLeft="50dp"
                            android:textAlignment="center"
                            android:text="  Place London"/>
                        <Button
                            android:layout_width="100dp"
                            android:layout_height="30dp"
android:background="#3f72b5"
                            android:text="Offers"
                            android:layout_below="@+id/txt_place2"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/button" />

                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>




        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <Button

            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Home"
            android:id="@+id/bbhome"

            android:background="#d32f2f"
            android:textColor="#fafafa" />
    </RelativeLayout>
</RelativeLayout>